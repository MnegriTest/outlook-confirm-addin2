<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">

  <Id>f3b8c6e2-1f2e-4a3a-9f3e-123456789abc</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>GitHub Addin</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Confirm Send to github@mario.it"/>
  <Description DefaultValue="Shows a confirmation popup before sending to github@mario.it"/>
  <IconUrl DefaultValue="https://mnegritest.github.io/outlook-confirm-addin2/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://mnegritest.github.io/outlook-confirm-addin2/assets/icon-80.png"/>
  <SupportUrl DefaultValue="https://mnegritest.github.io/outlook-confirm-addin2/"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemSend">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://mnegritest.github.io/outlook-confirm-addin2/function-file.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.5">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="functionFile"/>
          <ExtensionPoint xsi:type="MessageSendCommandSurface">
            <OfficeCommand>
              <Action xsi:type="ExecuteFunction">
                <FunctionName>onMessageSendHandler</FunctionName>
              </Action>
            </OfficeCommand>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://mnegritest.github.io/outlook-confirm-addin2/assets/icon-16.png"/>
        <bt:Image id="icon32" DefaultValue="https://mnegritest.github.io/outlook-confirm-addin2/assets/icon-32.png"/>
        <bt:Image id="icon80" DefaultValue="https://mnegritest.github.io/outlook-confirm-addin2/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="functionFile" DefaultValue="https://mnegritest.github.io/outlook-confirm-addin2/function-file.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Confirm Send"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="functionTooltip" DefaultValue="Confirm before sending to github@mario.it"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
